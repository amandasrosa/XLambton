<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true"
    android:scrollbars = "vertical"
    android:scrollbarStyle="insideInset"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/agent_profile_photo"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="centerInside"
        android:src="@drawable/secret_agent" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1">
        <EditText
            android:id="@+id/agent_profile_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Name"/>
        <EditText
            android:id="@+id/agent_profile_level"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Level"/>
        <EditText
            android:id="@+id/agent_profile_agency"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Agency"/>
        <EditText
            android:id="@+id/agent_profile_website"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Website"/>
        <EditText
            android:id="@+id/agent_profile_country"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Country"/>
        <EditText
            android:id="@+id/agent_profile_phone_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Phone Number"/>
        <EditText
            android:id="@+id/agent_profile_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Address"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp">
        <Button
            android:id="@+id/agent_profile_button_website"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_language_black_24dp"/>
        <Button
            android:id="@+id/agent_profile_button_call"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_call_black_24dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"/>
        <Button
            android:id="@+id/agent_profile_button_location"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_place_black_24dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp">
        <Button
            android:id="@+id/agent_profile_button_info"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_info_outline_black_24dp"/>
        <Button
            android:id="@+id/agent_profile_button_sms"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_message_black_24dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"/>
        <Button
            android:id="@+id/agent_profile_button_camera"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_camera_alt_black_24dp"/>
    </LinearLayout>


</LinearLayout>
