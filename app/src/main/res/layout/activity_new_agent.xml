<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/new_agent_photo"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:scaleType="centerInside"
        android:src="@drawable/secret_agent"
        android:layout_weight="1"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <EditText
            android:id="@+id/new_agent_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Name"/>

        <EditText
            android:id="@+id/new_agent_level"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Level"/>

        <EditText
            android:id="@+id/new_agent_agency"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Agency"/>

        <EditText
            android:id="@+id/new_agent_website"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Website"/>

        <EditText
            android:id="@+id/new_agent_country"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Country"/>

        <EditText
            android:id="@+id/new_agent_phone_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Phone Number"/>

        <EditText
            android:id="@+id/new_agent_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Address"/>
    </LinearLayout>

</LinearLayout>
