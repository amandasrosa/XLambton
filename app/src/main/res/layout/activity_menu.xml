<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:scaleType="centerInside"
        android:src="@drawable/secret_agent" />

    <Button
        android:id="@+id/menu_button_agent_list"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:background="#FAFAFA"
        android:drawableLeft="@drawable/ic_list_black_48dp"
        android:textColor="#000000"
        android:gravity="center_vertical"
        android:text="Agent List"
        android:textSize="18sp"
        android:drawablePadding="10sp"/>

    <Button
        android:id="@+id/menu_button_agent_search"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:background="#FAFAFA"
        android:drawableLeft="@drawable/ic_search_black_48dp"
        android:textColor="#000000"
        android:gravity="center_vertical"
        android:text="Search Agent"
        android:textSize="18sp"
        android:drawablePadding="10sp"/>

    <Button
        android:id="@+id/menu_button_add_agent"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:background="#FAFAFA"
        android:drawableLeft="@drawable/ic_add_circle_outline_black_48dp"
        android:textColor="#000000"
        android:gravity="center_vertical"
        android:text="Add Agent"
        android:textSize="18sp"
        android:drawablePadding="10sp"/>

</LinearLayout>
